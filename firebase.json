{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "package.json",
      "package-lock.json",
      "README.md",
      "LoginSignup.jsx",
      "public/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/landing.html"
      },
      {
        "source": "/login",
        "destination": "/index.html"
      }      
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  }
}
